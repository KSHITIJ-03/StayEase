<% layout('layout/boilerplate') %>



<style>
    body {
      background-color: #f8f9fa;
    }
    .form-container {
      width: 80%;
      max-width: 800px;
      margin: 50px auto;
      padding: 30px;
      border-radius: 15px;
      background-color: #fff;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    .form-container h2 {
      text-align: center;
      margin-bottom: 30px;
      color: #333;
    }
    .form-container .form-group label {
      font-weight: bold;
      color: #555;
    }
    .form-container .form-control {
      border-radius: 10px;
      padding: 12px;
    }
    .form-container .btn-primary {
      padding: 10px 20px;
      border-radius: 10px;
      background-color: #007bff;
      border: none;
    }
    .form-container .btn-primary:hover {
      background-color: #0056b3;
    }
  </style>


<div class="container">
<div class="row">
<div class="col-md-10 offset-md-1">
  <div class="form-container">
    <h2>Edit <%= house.name %></h2>
    <form action="/houses/<%=house._id%>?_method=put"  method="POST">
      <div class="form-group">
        <label for="houseName">House Name</label>
        <input type="text" class="form-control" id="houseName" placeholder="Enter house name" name="house[name]" value="<%= house.name %>" required>
      </div>
      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" id="address" placeholder="Enter address" name="house[address]" value="<%= house.address %>"  required>
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="form-control" id="price" placeholder="Enter price" name="house[price]" value="<%= house.price %>" required>
      </div>
      <div class="form-group">
        <label for="Availability">Availability</label>
        <input type="number" class="form-control" id="Availability" placeholder="Number of rooms" name="house[availability]" value="<%= house.availability %>" required>
      </div>
      <div class="form-group">
        <label for="images">Images</label>
        <input type="text" class="form-control" id="images" placeholder="Images" name="house[images]" value="<%= house.images %>" required>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" rows="3" placeholder="Enter description" name="house[description]" ><%= house.description %></textarea>
      </div>
      <button type="submit" class="btn btn-primary btn-block mt-4">Submit</button>
    </form>
  </div>
</div>
</div>
</div>
